{
  "name": "Page Modifier",
  "version": "1.0",
  "description": "Page Like a Document!",
  "permissions": [],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["main.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/pencil16.png",
    "32": "images/pencil32.png",
    "128": "images/pencil128.png"
  },
  "web_accessible_resources": ["images/marker32.png"]
}
